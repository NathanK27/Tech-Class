function penguin() {
  fill(0)
  rectangle(235 - c, 0)
  rectangle(260 - c, 0)
  rectangle(285 - c, 0)
  rectangle(210 - c, 25)
  rectangle(310 - c, 25)
  rectangle(185 - c, 50)
  rectangle(335 - c, 50)
  rectangle(185 - c, 75)
