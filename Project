  rectangle(235 - c, 150)
  rectangle(285 - c, 150)
  rectangle(235 - c, 50)
  rectangle(285 - c, 50) //all the black squares for the penguin

  fill(255)
  rectangle(185 - c, 0)
  rectangle(210 - c, 0)
  rectangle(310 - c, 0)
  rectangle(335 - c, 0)
  rectangle(185 - c, 25)
